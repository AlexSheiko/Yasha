<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
    </style>

    <style name="CategoryLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/category_background</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">#e6ffffff</item>
    </style>

    <style name="CategoryToggle" parent="CategoryLabel">
        <item name="android:background">@drawable/category_toggle</item>
        <item name="android:layout_width">40dp</item>
    </style>

</resources>
