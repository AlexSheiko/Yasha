<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="AppTheme.LightActionBar" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/window_background_gray</item>
        <item name="android:statusBarColor">#1E1E1E</item>
        <item name="colorPrimary">#FFFFFF</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.Dark" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/window_background_dark</item>
    </style>

    <style name="CategoryLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/category_background</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">#e6ffffff</item>
    </style>

    <style name="CategoryToggle" parent="CategoryLabel">
        <item name="android:background">@drawable/category_toggle</item>
        <item name="android:layout_width">40dp</item>
    </style>

    <style name="Container">
        <item name="android:layout_width">match_parent</item>
    </style>

    <color name="window_background_dark">#0C1417</color>
    <color name="window_background_gray">#EDEDED</color>
</resources>
