<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:descendantFocusability="blocksDescendants"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:padding="16dp"
        android:src="@drawable/avatar_placeholder"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/author_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:textColor="@android:color/primary_text_light"
            android:textSize="16sp"
            tools:text="Marcelle"/>

        <TextView
            android:id="@+id/message_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:textColor="@android:color/primary_text_light"
            android:textSize="14sp"
            tools:text="Johnny, forgive me for my misbehaviour the other day. You are a dear friend that I would like to keep close."/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/date_textview"
            tools:text="Yesterday"
            android:textColor="@android:color/secondary_text_light"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="right"
        android:paddingLeft="16dp">

        <TextView
            android:id="@+id/category_label"
            tools:text="T"
            style="@style/CategoryLabel"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/messages_counter"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:drawablePadding="4dp"
                android:drawableRight="@drawable/ic_message"
                android:gravity="center"
                android:padding="8dp"
                android:onClick="onClickComments"
                android:textSize="24sp"
                tools:text="1"/>

            <ImageButton
                android:id="@+id/button_more"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@null"
                android:src="@drawable/ic_more"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>