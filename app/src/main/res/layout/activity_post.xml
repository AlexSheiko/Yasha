<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
              android:orientation="vertical"
                tools:context=".PostActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="horizontal">

        <ToggleButton
            style="@style/CategoryToggle"
            android:layout_marginLeft="8dp"
            android:checked="true"
            android:contentDescription="@string/testimony"
            android:textOff="F"
            android:textOn="F"/>

        <ToggleButton
            style="@style/CategoryToggle"
            android:layout_marginLeft="8dp"
            android:contentDescription="@string/forgiveness"
            android:textOff="C"
            android:textOn="C"/>

        <ToggleButton
            style="@style/CategoryToggle"
            android:layout_marginLeft="8dp"
            android:contentDescription="@string/witness"
            android:textOff="W"
            android:textOn="W"/>

        <ToggleButton
            style="@style/CategoryToggle"
            android:layout_marginLeft="8dp"
            android:contentDescription="@string/confession"
            android:textOff="T"
            android:textOn="T"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:drawablePadding="8dp"
            android:onClick="onClickHistory"
            android:drawableRight="@drawable/ic_history"
            android:gravity="center_vertical"
            android:text="History"
            android:textAllCaps="false"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:padding="8dp">

        <EditText
            android:id="@+id/message_field"
            android:inputType="textCapSentences|textMultiLine"
            android:imeOptions="actionDone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingBottom="20dp"
            android:layout_weight="1"
            android:hint="@string/comment"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/category_background"
            android:text="@string/post"
            android:onClick="onClickPost"
            android:textAllCaps="false"
            android:textColor="#e6ffffff"/>

    </LinearLayout>

</LinearLayout>
